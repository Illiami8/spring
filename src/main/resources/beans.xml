    </bean>


    <util:list id="JavaStudents">
        <ref bean="jong"/>
        <ref bean="bob"/>
        <ref bean="anna"/>
    </util:list>
    <bean id="java" class="com.cherepovski.model.Group" c:id="1" c:name="Java" c:teacher-ref="alex" p:students-ref="JavaStudents"/>
