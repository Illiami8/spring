<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-init-method="init" default-destroy-method="destroy"
>
<util:map id="JongMarks">
    <entry key="Java" value="9"/>
    <entry key="Python" value="8"/>
    <entry key="Java" value="7"/>
</util:map>

    <util:map id="BobMarks">
        <entry key="Java" value="9"/>
        <entry key="Python" value="8"/>
        <entry key="Java" value="7"/>
    </util:map>

    <!-- bean definitions here -->
<util:map id="AnnaMarks">
    <entry key="Java" value="6"/>
    <entry key="Python" value="8"/>
    <entry key="Java" value="7"/>
</util:map>

    <bean id="jong" class="com.cherepovski.model.Student" c:_0="1" c:_1="Jong" c:_2-ref="JongMarks"/>
        <!--<constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="Jong"/>  !-->
    <bean id="bob" class="com.cherepovski.model.Student" p:id="2" p:name="Bob" p:marks-ref="BobMarks"/>
        <!--<property name ="id" value = "2"/>
        <property name ="name" value = "Bob"/>!-->
